{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "ES2022", // Compila a una versión moderna de JavaScript
    "module": "commonjs", // Usa el sistema de módulos de Node.js
    "rootDir": "./src", // La carpeta raíz de tu código TypeScript
    "outDir": "./dist", // La carpeta donde irá el JavaScript compilado
    "esModuleInterop": true, // Mejora la compatibilidad entre módulos ES y CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Habilita todas las comprobaciones estrictas de tipos
    "skipLibCheck": true
  }
}
